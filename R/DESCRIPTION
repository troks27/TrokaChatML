Package: TrokaChatML
Title: TrokaChatML: Analysis Pipeline for Single-Cell RNAseq to Drug Target Discovery
Version: 0.0.0.9000
Authors@R: c(
    person("Michael", "Troka", email = "troks27@upenn.edu", role = c("aut", "cre"),
           comment = c(ORCID = "0009-0000-1510-963X")),
    person("Dana", "Graves", role = "aut", comment = c(affiliation = "University of Pennsylvania")),
